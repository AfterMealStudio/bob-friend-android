<!--            app:layout_constraintTop_toTopOf="parent" />-->

        <Button
            android:id="@+id/addReComment"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:gravity="start|center_vertical"
            android:text="@string/comment_recomment"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/reportComment"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:text="@string/comment_report"
            style="@style/Widget.AppCompat.Button.Borderless"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addReComment" />

        <Button
            android:id="@+id/deleteComment"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:text="@string/comment_delete"
            style="@style/Widget.AppCompat.Button.Borderless"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reportComment" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>