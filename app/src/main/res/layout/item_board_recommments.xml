<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="70dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_margin="7.5dp"
        android:layout_width="20dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/right_arrow" />

    <ImageView
        android:id="@+id/recomment_image_profile"
        android:layout_margin="7.5dp"
        android:layout_width="55dp"
        android:layout_height="55dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recomment_text_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7.5dp"
            android:text="userId"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/recomment_contents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7.5dp"
            android:text="@string/read"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recomment_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7.5dp"
            android:text="@string/userDateOfBirth2" />
        <TextView
            android:id="@+id/recomment_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7.5dp"
            android:layout_gravity="end"
            android:text="@string/comment_report" />
    </LinearLayout>


</LinearLayout>