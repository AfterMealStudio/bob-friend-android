<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="70dp"
    android:orientation="horizontal"
    android:background="@drawable/recomment_background"
    android:backgroundTint="@color/grey"
    android:layout_marginBottom="3dp"
    android:paddingStart="30dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recomment_text_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/read_writer"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/recomment_contents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:text="@string/read"/>

    </LinearLayout>

    <TextView
        android:id="@+id/recomment_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:text="@string/userDateOfBirth2" />

    <ImageView
        android:id="@+id/recomment_menu_btn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        app:srcCompat="@drawable/menu_btn" />
</LinearLayout>