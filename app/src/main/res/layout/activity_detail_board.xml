<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="detail"
            type="com.example.bob_friend_android.viewmodel.BoardViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.DetailBoardActivity">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/comment_write"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/scrollView2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="70dp"
                android:scrollbarStyle="outsideOverlay"
                android:scrollbars="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="20dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/register_title">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/read_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/read_title"
                            android:textColor="@color/main_color1" />

                        <TextView
                            android:id="@+id/read_writer2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:text="@string/read_writer"
                            android:textColor="@color/main_color1" />

                        <TextView
                            android:id="@+id/read_writer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/read_title"
                            android:textColor="@color/main_color1" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/detail_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:text="@string/write_member"
                        android:textColor="@color/main_color1"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/detail_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:gravity="start"
                        android:minHeight="30dp"
                        android:text="@string/read_content2"
                        android:textColor="@color/main_color1"
                        android:textSize="20sp" />

                    <!--                <TextView-->
                    <!--                    android:id="@+id/detail_write_time"-->
                    <!--                    android:layout_width="match_parent"-->
                    <!--                    android:layout_height="wrap_content"-->
                    <!--                    android:gravity="right"-->
                    <!--                    android:textColor="@color/main_color1"-->
                    <!--                    android:text="@string/read_write_time" />-->

                    <TextView
                        android:id="@+id/detail_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/main_color1" />

                    <TextView
                        android:id="@+id/read_appointment_place"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/read_appointment_place_and_time"
                        android:textColor="@color/main_color1" />

                    <RelativeLayout
                        android:id="@+id/detail_map_view"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:background="@drawable/boarder_line" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/read_meeting_place"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:text="@string/read_meeting_place"
                            android:textColor="@color/main_color1"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/detail_appointment_place_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/read_appointment_place_and_time"
                            android:textColor="@color/main_color1"
                            android:textSize="17sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/read_meeting_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:text="@string/read_meeting_time"
                            android:textColor="@color/main_color1"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/read_meeting_time2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/read_meeting_time2"
                            android:textColor="@color/main_color1"
                            android:textSize="17sp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/detail_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:text="@string/read_participate"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/detail_line2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/main_color1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/read_member_writer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:text="@string/read_member"
                            android:textColor="@color/main_color1" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/read_member1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/read_member1"
                                android:textColor="@color/main_color1" />

                            <TextView
                                android:id="@+id/detail_current_member"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/read_member2"
                                android:textColor="@color/main_color1" />

                            <TextView
                                android:id="@+id/read_member11"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/read_member11"
                                android:textColor="@color/main_color1" />

                            <TextView
                                android:id="@+id/detail_total_member"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/read_member4"
                                android:textColor="@color/main_color1" />

                            <TextView
                                android:id="@+id/read_member111"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/read_member111"
                                android:textColor="@color/main_color1" />
                        </LinearLayout>
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/detail_member"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:nestedScrollingEnabled="false"
                        tools:itemCount="10"
                        tools:listitem="@layout/item_user" />

                    <TextView
                        android:id="@+id/detail_line3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/main_color1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/read_comment1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:text="@string/read_comment"
                            android:textColor="@color/main_color1" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/read_comment2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/read_member1"
                                android:textColor="@color/main_color1" />

                            <TextView
                                android:id="@+id/detail_current_comment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/read_member2"
                                android:textColor="@color/main_color1" />

                            <TextView
                                android:id="@+id/read_comment3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/read_member111"
                                android:textColor="@color/main_color1" />
                        </LinearLayout>
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/comment_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:nestedScrollingEnabled="false"
                        android:overScrollMode="never"
                        android:scrollbars="none"
                        tools:listitem="@layout/item_board_comments" />
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_color1"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            android:gravity="center"
            app:menu="@menu/option_menu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="16dp"
                android:layout_height="16dp"
                app:srcCompat="@drawable/delete"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="@string/read"
                android:textSize="20sp" />
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout
            android:id="@+id/comment_write"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="60dp"
            android:maxHeight="100dp"
            android:orientation="horizontal"
            android:background="@color/grey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center">

            <EditText
                android:id="@+id/editTextComment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:maxHeight="180dp"
                android:ems="10"
                android:inputType="text|textMultiLine"/>

            <ImageView
                android:id="@+id/post_comment"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                app:srcCompat="@drawable/right_arrow" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>